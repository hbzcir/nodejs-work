doctype
html(lang='ko-KR')
  head
    meta(charset='utf-8')
    title= tit
    style(type='text/css') 
        | input {border:1px solid #000}
        | textarea {border:1px solid #000}
        | fieldset {display:flex; width:40%; border:0; padding:0; margin:0}
        | fieldset label {flex:1 100%; margin-bottom:10px;}
        | fieldset label input, fieldset label textarea {box-sizing:border-box; width:100%; margin:0; padding:10px; font-size:30px}
        | button { font-size:30px}
        | table { width:100%; padding:10px; border-collapse:collapse}
        | table th { text-align:center !important}
        | table th, table td { padding:5px; border: 1px solid #333}
        | .view-title {}
        | .view-title:before {content:'제목 : ';display:inline-block;  color:gray; font-weight:600}
        | .view-title span {}
        | .view-title span:before {margin-left:20px;display:inline-block; content:' 작성자 : '; color:gray; font-weight:600}
        | .view-con {font-size:1.6em; border:1px solid #333; padding:20px}
  body
    div.wrap
        h1 게시판상세 - 댓글
        
     
        div.board-list
            table
                colgrouop
                    col(width='50px')
                    col
                    col
                    col
                thead
                    tr
                        th No
                        th Name
                        th Title
                        th Date
                tbody
                    tr
                        each comment_table in cmts
                            td= comment_table.boardCode
                            td= comment_table.userName
                            td= comment_table.commentText
                            td= comment_table.commentDate

